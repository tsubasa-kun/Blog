.category-all-page {
  .category-all-title { text-align: center; }

  .category-all {  }

  .category-list {
    margin: 0;
    padding: 0;
    list-style: none;
    text-align: center;
    font-size: 12px;
  }

  .category-list-item {
    display: inline-block;
    margin: 10px;
  }

  .category-list-count {
    color: $grey;
    &:before {
      display: inline;
      content: " ("
    }
    &:after {
      display: inline;
      content: ") "
    }
  }
}
